version: "3.8"

services:
  database:
    image: postgres
    container_name: ${POSTGRES_CONTAINER_NAME}
    restart: "always"
    volumes:
      - pg_data:/var/lib/postgresql/data
    ports:
      - ${TYPEORM_PORT}:5432
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    network_mode: host
  app:
    build: .
    container_name: ${PROJECT_NAME}
    ports:
      - ${SERVER_PORT}:${SERVER_PORT}
      - 9229:9229
    volumes:
      - .:/usr/app
    network_mode: host
    links:
      - database
    depends_on:
      - database
volumes:
  pg_data:
    driver: local
